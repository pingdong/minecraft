{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "apiProfile": "2019-03-01-hybrid",
    "parameters": {
        "tags": {
            "type": "object",
            "defaultValue": {}
        },
        "location": {
            "type": "string",
            "defaultValue": "australiaeast"
        },
        "resourceGroup_name": {
            "type": "string"
        },
        "storageAccount_prefix": {
            "type": "string"
        },
        "servicePlan_name": {
            "type": "string"
        },
        "servicePlan_sku": {
            "type": "string",
            "defaultValue": "B1"
        },
        "minecraft_image": {
            "type": "string"
        },
        "minecraft_worldName": {
            "type": "string"
        }
    },
    "variables": {
        // Tags
        //    DefaultTag
        "sharedTags" : {},
        //    Combine default tag with custom tags
        "tags": "[union(variables('sharedTags'), parameters('tags'))]",
        // Storage Account
        "storageAccount_name": "[concat(parameters('storageAccount_prefix'), substring(deployment().name,0,3))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2020-10-01",
            "location": "[parameters('location')]",
            "name": "[parameters('resourceGroup_name')]",
            "tags": "[variables('tags')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('resourceGroup_name')]",
            "name": "[concat('MCSDeployment', parameters('minecraft_worldName'))]",
            "dependsOn": [
                "[parameters('resourceGroup_name')]"
            ],
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"    // Delay evaluation of the expression until that deployment begins.
                                        // If not, listkeys() to get storage account access key fails

                                        /* 
                                        When scope is set to outer, you can't use the reference and list* function in the outputs section of a 
                                        nested template for a resource you have deployed in the nested template. To return the values for a deployed
                                        resource in a nested template, either use inner scope or convert your nested template to a linked template.
                                        */
                },
                "mode": "Incremental",
                // Since scope change to 'inner', 'global' parameters/variables won't work
                "parameters": {
                    "tags": {
                        "value": "[variables('tags')]"
                    },
                    "storageAccount_name": {
                        "value": "[variables('storageAccount_name')]"
                    },
                    "servicePlan_name": {
                        "value": "[parameters('servicePlan_name')]"
                    },
                    "servicePlan_sku": {
                        "value": "[parameters('servicePlan_sku')]"
                    },
                    "minecraft_image": {
                        "value": "[parameters('minecraft_image')]"
                    },
                    "minecraft_worldName": {
                        "value": "[parameters('minecraft_worldName')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "apiProfile": "2019-03-01-hybrid",
                    "parameters": {
                        "tags": {
                            "type": "object"
                        },
                        "storageAccount_name": {
                            "type": "string"
                        },
                        "servicePlan_name": {
                            "type": "string"
                        },
                        "servicePlan_sku": {
                            "type": "string"
                        },
                        "minecraft_image": {
                            "type": "string"
                        },
                        "minecraft_worldName": {
                            "type": "string"
                        }
                    },
                    "variables": {
                    },
                    "resources": [
                        // Storage Account
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "name": "[parameters('storageAccount_name')]",
                            "location": "[resourceGroup().location]",
                            "tags": "[parameters('tags')]",
                            "kind": "StorageV2",
                            "sku": {
                                "name": "Standard_ZRS",
                                "tier": "Standard"
                            },
                            "properties": {
                                "accessTier": "Hot",
                                "largeFileSharesState": "Enabled",
                                "networkAcls": {
                                    "bypass": "AzureServices",
                                    "defaultAction": "Allow"
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts/fileServices",
                            "apiVersion": "2019-06-01",
                            "name": "[concat(parameters('storageAccount_name'), '/default')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount_name'))]"
                            ],
                            "sku": {
                                "name": "Standard_ZRS",
                                "tier": "Standard"
                            },
                            "properties": {
                                "shareDeleteRetentionPolicy": {
                                    "enabled": true,
                                    "days": 14
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
                            "apiVersion": "2019-06-01",
                            "name": "[concat(parameters('storageAccount_name'), '/default/', parameters('minecraft_worldName'))]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', parameters('storageAccount_name'), 'default')]",
                                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount_name'))]"
                            ],
                            "properties": {
                                "shareQuota": 1024,
                                "accessTier": "Hot"
                            }
                        },
                        // App Service
                        {
                            "type": "Microsoft.Web/serverfarms",
                            "apiVersion": "2018-02-01",
                            "name": "[parameters('servicePlan_name')]",
                            "location": "[resourceGroup().location]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', parameters('storageAccount_name'), 'default', parameters('minecraft_worldName'))]",
                                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', parameters('storageAccount_name'), 'default')]",
                                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount_name'))]"
                            ],
                            "kind": "linux",
                            "sku": {
                                "name": "[parameters('servicePlan_sku')]"
                            },
                            "properties": {
                                "reserved": true
                            }
                        },
                        {
                            "type": "Microsoft.Web/sites",
                            "apiVersion": "2018-02-01",
                            "name": "[concat('ap-', parameters('minecraft_worldName'))]",
                            "location": "[resourceGroup().location]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlan_name'))]"
                            ],
                            "kind": "app,linux,container",
                            "properties": {
                                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlan_name'))]",
                                "siteConfig": {
                                    "name": "[concat('ap-', parameters('minecraft_worldName'))]",
                                    "linuxFxVersion": "[concat('DOCKER|', parameters('minecraft_image'))]"
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
